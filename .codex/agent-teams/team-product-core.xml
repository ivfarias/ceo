<agent_team id="team-product-core" version="1.0">
  <bundle>
    <name>Core Product Team</name>
    <icon>ðŸš€</icon>
    <description>
      <![CDATA[
      The essential team for day-to-day feature development,
      bug fixing, and product definition.
      ]]>
    </description>
  </bundle>

  <agents>
    <agent id="ceo" role="orchestrator" />
    <agent id="pm" role="product-management" />
    <agent id="developer" role="engineering" />
    <agent id="ux-expert" role="design" />
    <agent id="qa" role="quality-assurance" />
  </agents>

  <coordination>
    <rules>
      <rule>PM defines requirements and acceptance criteria for all features.</rule>
      <rule>Developer implements features aligned with product roadmap.</rule>
      <rule>UX-Expert ensures user experience consistency and usability.</rule>
      <rule>QA validates all outputs before release.</rule>
      <rule>CEO coordinates priorities, blockers, and delivery timeline.</rule>
    </rules>
  </coordination>

  <communication>
    <mode>sequential-synchronous</mode>
    <handoff_policy>explicit</handoff_policy>
    <summary_format>markdown</summary_format>
  </communication>

  <persistence>
    <shared_context>true</shared_context>
    <memory_scope>team</memory_scope>
    <session_reuse>true</session_reuse>
  </persistence>

  <output>
    <deliverables>
      <deliverable>feature_specifications.md</deliverable>
      <deliverable>bug_fixes_report.yaml</deliverable>
      <deliverable>qa_validation_summary.md</deliverable>
    </deliverables>
  </output>
</agent_team>